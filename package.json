{
    "name": "ingredients-service",
    "version": "1.0.0",
    "description": "YourYummy ingredients service",
    "license": "UNLICENSED",
    "type": "module",
    "private": true,
    "main": "index.js",
    "scripts": {
        "prestart": "npm install --only=prod",
        "start": "node index.js",
        "build": "docker build . -t ingredients-service:1.0.0 -t ingredients-service:latest",
        "test:integration": "mocha --exit --recursive --timeout 7000 tests/integration",
        "test:component": "mocha --exit --recursive --timeout 5000 -r tests/setup.test.js tests/component",
        "test": "npm run test:integration && npm run test:component",
        "cov": "c8 --reporter=lcov --reporter=text npm run test",
        "lint": "eslint ./ --ignore-pattern \"tests/**\"",
        "format": "npm run lint -- --fix"
    },
    "dependencies": {
        "@oas-tools/core": "^3.0.0",
        "c8": "^7.12.0",
        "cachegoose": "^8.0.0",
        "chai": "^4.3.7",
        "chai-http": "^4.3.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.31.0",
        "express": "^4.18.0",
        "mocha": "^10.2.0",
        "mongoose": "^6.8.3",
        "opossum": "^7.0.1",
        "proxyquire": "^2.1.3",
        "sinon": "^15.0.1",
        "sinon-chai": "^3.7.0"
    }
}
